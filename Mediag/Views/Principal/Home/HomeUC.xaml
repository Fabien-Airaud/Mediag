<UserControl x:Class="Mediag.Views.Principal.Home.HomeUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Views/Principal/Home/BackgroundHome.jpeg" Stretch="UniformToFill" Opacity="0.8"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Mediag" Grid.Row="1" FontSize="72" FontFamily="Lucida Calligraphy" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5"/>
        <StackPanel Grid.Row="2" VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Content="Welcome Dr." FontSize="48"/>
            <Label Content="{Binding Doctor.FirstName}" FontSize="48"/>
            <Label Content="{Binding Doctor.LastName}" FontSize="48"/>
        </StackPanel>

    </Grid>
</UserControl>
