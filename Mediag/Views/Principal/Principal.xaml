<Window x:Class="Mediag.Views.Principal.Principal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Principal"
        Height="450" Width="800">

    <Grid>
        <TabControl>
            <TabItem Header="Home">
                <Grid>
                    <Grid.Background>
                        <ImageBrush ImageSource="/Views/Principal/BackgroundHome.jpeg" Stretch="UniformToFill"/>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Label Content="Mediag" Grid.Row="1" FontSize="72" FontFamily="Lucida Calligraphy" HorizontalAlignment="Center" RenderTransformOrigin="0.5,0.5"/>
                    <Label Content="Welcome " Grid.Row="2" FontSize="48" HorizontalAlignment="Center"/>

                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid>

                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
