<Window x:Class="Mediag.Views.Principal.Principal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Principal" WindowStartupLocation="CenterScreen"
        Height="450" Width="900" MinHeight="400" MinWidth="890">

    <Grid>
        <TabControl>
            <TabItem Header="Home">
                <Frame Source="/Views/Principal/HomePage.xaml" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" NavigationUIVisibility="Hidden"/>
            </TabItem>
            <TabItem Header="Medical files">
                <Frame Source="/Views/Principal/MedicalFiles.xaml" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" NavigationUIVisibility="Hidden"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
